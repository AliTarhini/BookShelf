<h1>Edit review</h1>

<!-- not using the form template because it create a review not editing the old review -->

<%= simple_form_for([@book,@review]) do |f| %>

<div id="rating-form">
      <label>Rating</label>
    </div>
  <%= f.input :comment %>
  <%= f.button :submit %>

<% end %>
<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>
